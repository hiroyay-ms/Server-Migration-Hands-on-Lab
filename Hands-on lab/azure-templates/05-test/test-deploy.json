{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "仮想ネットワークのリソース グループ名"
            }
        },
        "virtualNetworkId": {
            "type": "string",
            "metadata": {
                "description": "仮想マシンを展開する仮想ネットワーク名"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "仮想マシンを展開するサブネット名"
            }
        },
        "domainToJoin": {
            "type": "string",
            "defaultValue": "DNS ドメイン名（sample.local）",
            "metadata": {
                "description": "参加するドメイン名"
            }
        },
        "domainUsername": {
            "type": "string",
            "metadata": {
                "description": "ドメイン ユーザー アカウント名"
            }
        },
        "domainPassword": {
            "type": "securestring",
            "metadata": {
                "description": "ドメイン ユーザー パスワード"
            }
        },
        "adminUsername": {
            "type": "string", 
            "defaultValue": "AzureUser",
            "metadata": {
                "description": "ローカルの管理者名"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "ローカルの管理者のパスワード"
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",

        "vnetId": "[parameters('virtualNetworkId')]",
        "subnetRef": "[resourceID(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetWorks/subnets', parameters('virtualNetworkId'), parameters('subnetName'))]",

        "virtualMachineSize": "Standard_D2s_v3",

        "webVirtualMachineName": "Web-SVR",
        "webNetworkInterface": "[concat(variables('webVirtualMachineName'), '-NIC')]",

        "devCustomScriptFileName": "configure-devvm.ps1",
        "devCustomScriptUri": "[concat('https://raw.githubusercontent.com/hiroyay-ms/Server-Migration-Hands-on-Lab/hiroyay/Hands-on%20lab/azure-templates/04-virtual-machines/', variables('devCustomScriptFileName'))]",

        "webCustomScriptFileName": "configure-webvm.ps1",
        "webCustomScriptUri": "[concat('https://github.com/hiroyay-ms/Server-Migration-Hands-on-Lab/blob/hiroyay/Hands-on%20lab/azure-templates/05-test/', variables('webCustomScriptFileName'))]"    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "type": "Microsoft.Resources/deployments",
            "name": "updateVM",
            "dependsOn": [
                "[variables('webVirtualMachineName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {},
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Compute/virtualMachines",
                            "apiVersion": "2019-03-01",
                            "name": "[variables('webVirtualMachineName')]",
                            "location": "[variables('location')]",
                            "resources": [
                                {
                                    "type": "extensions",
                                    "apiVersion": "2019-03-01",
                                    "name": "SetupWebVM",
                                    "location": "[variables('location')]",
                                    "dependsOn": [
                                        "[concat('Microsoft.Compute/virtualMachines/', variables('webVirtualMachineName'))]"
                                    ],
                                    "properties": {
                                        "publisher": "Microsoft.Compute",
                                        "type": "CustomScriptExtension",
                                        "typeHandlerVersion": "1.9",
                                        "autoUpgradeMinorVersion": true,
                                        "settings": {
                                            "fileUris": [
                                                "[variables('devCustomScriptUri')]"
                                            ],
                                            "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('devCustomScriptFileName'))]"
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}